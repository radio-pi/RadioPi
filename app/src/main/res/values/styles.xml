<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light" >
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:editTextColor">@color/text_secondary</item>
        <item name="android:navigationBarColor">@color/text_secondary</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ColoredActionBar</item>

        <!-- this makes sure the action mode is painted over not above the action bar -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@drawable/action_mode_app_bar_background</item>

        <!-- this makes sure the action mode is painted over not above the action bar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@drawable/action_mode_app_bar_background</item>
    </style>

    <style name="ColoredActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>

        <!-- Support library compatibility -->
        <item name="background">@color/primary</item>
    </style>

</resources>
